{
  "name": "@devpayr/frontend-sdk",
  "version": "0.1.4",
  "description": "DevPayr Frontend SDK for license verification, payment enforcement, and injectables delivery.",
  "type": "module",

  "main": "./dist/devpayr-frontend.cjs.js",
  "module": "./dist/devpayr-frontend.esm.js",
  "browser": "./dist/devpayr-frontend.js",

  "exports": {
    ".": {
      "import": "./dist/devpayr-frontend.esm.js",
      "require": "./dist/devpayr-frontend.cjs.js",
      "default": "./dist/devpayr-frontend.esm.js"
    },
    "./browser": "./dist/devpayr-frontend.js"
  },

  "unpkg": "dist/devpayr-frontend.js",
  "jsdelivr": "dist/devpayr-frontend.js",

  "scripts": {
    "build:browser": "esbuild src/sdk.js --bundle --minify --format=iife --global-name=DevPayr --outfile=dist/devpayr-frontend.js",
    "build:esm": "esbuild src/sdk.js --bundle --minify --format=esm --outfile=dist/devpayr-frontend.esm.js",
    "build:cjs": "esbuild src/sdk.js --bundle --minify --format=cjs --outfile=dist/devpayr-frontend.cjs.js",
    "build": "npm run build:browser && npm run build:esm && npm run build:cjs",
    "build:dev": "esbuild src/sdk.js --bundle --format=iife --sourcemap --outfile=dist/devpayr-frontend.js",
    "watch": "esbuild src/sdk.js --bundle --format=iife --sourcemap --outfile=dist/devpayr-frontend.js --watch",
    "serve": "npx serve . -l 5173",
    "prepublishOnly": "npm run build"
  },

  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],

  "keywords": [
    "devpayr",
    "frontend-sdk",
    "license",
    "licensing",
    "payment-enforcement",
    "injectables",
    "anti-piracy",
    "browser-sdk",
    "javascript-sdk"
  ],

  "repository": {
    "type": "git",
    "url": "git+https://github.com/DevPayr/devpayr-frontend-sdk.git"
  },

  "author": "DevPayr",
  "license": "MIT",

  "devDependencies": {
    "esbuild": "^0.25.12"
  },

  "directories": {
    "example": "examples"
  },

  "bugs": {
    "url": "https://github.com/DevPayr/devpayr-frontend-sdk/issues"
  },

  "homepage": "https://github.com/DevPayr/devpayr-frontend-sdk#readme"
}
